@model WebBanHaiSan.ViewModels.LoginVM
@{
    ViewData["Title"] = "Login";
    Layout = "~/Areas/Admin/Views/Shared/LoginLayout.cshtml";
}
<style>
    .centered {
        display: flex;
        justify-content: center;
    }
</style>
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth px-0">
            <div class="row w-100 mx-0">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                        <h6 class="fw-light">Đăng nhập để tiếp tục.</h6>
                        <form class="pt-3" asp-action="Login" method="post">
                            <div class="row">
                                <div class="form-group col-md-12 text-center">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                                <div class="form-group">
                                    <label class="mb-0">Email Đăng Nhập</label>
                                    <input type="text" asp-for="UserName" class="form-control form-control-lg" placeholder="Email Đăng Nhập">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="mb-0">Mật Khẩu</label>
                                    <input type="password" asp-for="Password" class="form-control form-control-lg" placeholder="Mật Khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="mt-3 centered">
                                <button style="color:white" type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">Đăng Nhập</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>

