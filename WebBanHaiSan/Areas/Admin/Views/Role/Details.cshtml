@model WebBanHaiSan.Models.Role

@{
    ViewData["Title"] = "Thông tin Quyền Truy Cập";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Thông tin Quyền Truy Cập</h4>
        <div class="table">
            <table class="TTQQT">
                <tbody>
                    <tr>
                        <td>ID:</td>
                        <td>@Model.RoleId</td>
                    </tr>
                    <tr>
                        <td>Tên Quyền Truy Cập:</td>
                        <td>@Model.Rolename</td>
                    </tr>
                    <tr>
                        <td>Mô tả:</td>
                        <td>@Model.Decription</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div>
            <a class="btn btn-inverse-warning btn-fw" asp-action="Edit" asp-route-id="@Model?.RoleId">Sửa</a> |
            <a class="btn btn-light" asp-action="Index">Quay Lại</a>
        </div>
    </div>
</div>
