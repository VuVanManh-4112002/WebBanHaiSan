@model WebBanHaiSan.ViewModels.XemDonHang

<div class="cart-box-main">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="table-main table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Mã Sản Phẩm</th>
                                <th>Tên Sản Phẩm</th>
                                <th>Số Lượng</th>
                                <th>Giảm Giá</th>
                                <th>Giá Bán</th>
                                <th>Thành Tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ChiTietDonHang)
                            {
                                <tr>
                                    <td class="name-pr">
                                        <p>#@item.ProductId</p>
                                    </td>
                                    <td class="price-pr">
                                        <p>@item.Product.Productname</p>
                                    </td>
                                    <td class="price-pr">
                                        <p>@item.Amount</p>
                                    </td>
                                    <td class="price-pr">
                                        <p>@item.Discount</p>
                                    </td>
                                    <td class="price-pr">
                                        <p>@item.Price</p>
                                    </td>
                                    <td class="total-pr">
                                        <p>@item.Total.Value.ToString("#,##0")VNĐ</p>
                                    </td>
                                </tr>
                                <tr>
                                    <p>Thành Tiền: @Model.DonHang.TotalMoney.Value.ToString("#,##0")VNĐ</p>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

