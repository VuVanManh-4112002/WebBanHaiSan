@model WebBanHaiSan.ViewModels.ChangePasswordVM
@{
    ViewData["Title"] = "Thay Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart-box-main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="checkout-address">
                    <div class="title-left text-center">
                        <h3>Đổi Mật Khẩu</h3>
                    </div>
                    <form class="needs-validation" asp-action="ChangePassword">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label class="mb-0">Mật Khẩu Hiện Tại</label>
                                <input type="password" asp-for="PasswordNow" class="form-control" placeholder="Mật Khẩu Hiện Tại">
                                <span asp-validation-for="PasswordNow" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Mật Khẩu Mới</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Mật Khẩu Mới">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Xác Nhận Mật Khẩu Mới</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Xác Nhận Mật Khẩu Mới">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center mt-4">
                            <button type="submit" class="btn btn-primary btn-block mt-4">Lưu Thay Đổi</button>
                        </div>
                        <div class="text-center mt-4" style="margin-bottom: 40px">
                            <a class="btn btn-primary btn-block mt-4" asp-controller="Acount" asp-action="Dashboard">Quay Lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
