@model WebBanHaiSan.ViewModels.RegisterVM

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart-box-main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="checkout-address">
                    <div class="title-left text-center">
                        <h3>Đăng Ký Tài Khoản</h3>
                    </div>
                    <form class="needs-validation" asp-action="DangkyTaiKhoan">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="row">
                            <div class="form-group col-md-12">
                                <label class="mb-0">Họ Và Tên</label>
                                <input type="text" asp-for="FullName" class="form-control" placeholder="Họ Và Tên">
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Số Điện Thoại</label>
                                <input type="tel" asp-for="Phone" class="form-control" placeholder="Số Điện Thoại">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Email Address</label>
                                <input type="email" asp-for="Email" class="form-control" placeholder="Nhập Email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="mb-0">Mật Khẩu</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Mật Khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-6">
                                <label class="mb-0">Xác Nhận Mật Khẩu</label>
                                <input type="password" asp-for="ConfirmPassword" class="form-control" placeholder="Xác Nhận Mật Khẩu">
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button style="color:white" type="submit" class="btn btn-primary btn-block mt-4">Đăng Ký</button>
                        </div>
                        <div class="text-center">
                            <a style="color:white" class="btn btn-primary btn-block mt-4" asp-controller="Acount" asp-action="Login">Quay Lại Đăng Nhập</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
