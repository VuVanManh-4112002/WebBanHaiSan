@model WebBanHaiSan.ViewModels.AcountVM

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="cart-box-main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="checkout-address">
                    <div class="title-left text-center">
                        <h3>Thông Tin Khách Hàng</h3>
                    </div>
                    <form class="needs-validation" asp-action="Edit" asp-controller="Acount" enctype="multipart/form-data" method="post">
                        <div class="row">
                            <div class="col-md-12 form-group">
                                <label for="fullName" class="mb-0">Họ Và Tên</label>
                                <input type="text" asp-for="FullName" id="fullName" class="form-control" placeholder="Họ Và Tên" required>
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label for="birthday" class="mb-0">Ngày Sinh</label>
                                <input type="text" asp-for="Birthday" id="birthday" class="form-control" placeholder="Ngày Sinh" required>
                                <span asp-validation-for="Birthday" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="mb-0">Giới Tính</label>
                                <div class="d-flex">
                                    <div class="custom-control custom-radio custom-control-inline mr-3">
                                        <input id="genderNam" asp-for="Gender" name="Gender" type="radio" class="custom-control-input" value="Nam" checked required>
                                        <label class="custom-control-label" for="genderNam">Nam</label>
                                    </div>
                                    <div class="custom-control custom-radio custom-control-inline">
                                        <input id="genderNu" asp-for="Gender" name="Gender" type="radio" class="custom-control-input" value="Nữ" required>
                                        <label class="custom-control-label" for="genderNu">Nữ</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="avatar" class="mb-0">Hình ảnh</label>
                                <input type="file" asp-for="Avatar" id="avatar" class="form-control-file" required>
                                <span asp-validation-for="Avatar" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="phone" class="mb-0">Số Điện Thoại</label>
                                <input type="tel" asp-for="Phone" id="phone" class="form-control" placeholder="Số Điện Thoại" required>
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="email" class="mb-0">Email</label>
                                <input type="email" asp-for="Email" id="email" class="form-control" placeholder="Nhập Email" required>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="col-md-12 form-group">
                                <label for="address" class="mb-0">Địa Chỉ</label>
                                <input type="text" asp-for="Address" id="address" class="form-control" placeholder="Nhập Địa Chỉ" required>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>
                        <button type="submit" name="payment" class="btn btn-primary btn-block mt-4">Sửa Thông Tin</button>
                        <a class="btn btn-primary btn-block mt-4" asp-controller="Acount" asp-action="Dashboard">Quay Lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
