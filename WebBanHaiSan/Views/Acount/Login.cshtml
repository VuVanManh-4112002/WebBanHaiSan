@model WebBanHaiSan.ViewModels.LoginVM

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .centered {
        display: flex;
        justify-content: center;
    }
</style>
<div class="cart-box-main">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="checkout-address">
                    <div class="title-left text-center">
                        <h3>Đăng Nhập Tài Khoản</h3>
                    </div>
                    <form class="needs-validation" asp-action="Login" method="post" asp-route-returnurl="@ViewBag.ReturnUrl">
                        <div class="row">
                            <div class="form-group col-md-12 text-center">
                                <div asp-validation-summary="All" class="text-danger"></div>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Email Đăng Nhập</label>
                                <input type="text" asp-for="UserName" class="form-control" placeholder="Email Đăng Nhập">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group col-md-12">
                                <label class="mb-0">Mật Khẩu</label>
                                <input type="password" asp-for="Password" class="form-control" placeholder="Mật Khẩu">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="text-center">
                            <button style="color:white" type="submit" class="btn btn-primary btn-block mt-4">Đăng Nhập</button>
                        </div>
                        <div class="text-center">
                            <a style="color:white" class="btn btn-primary btn-block mt-4" asp-controller="Acount" asp-action="Dangkytaikhoan">Đăng Ký</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


