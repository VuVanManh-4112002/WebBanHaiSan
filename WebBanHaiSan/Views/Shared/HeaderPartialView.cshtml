<div class="main-top">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="right-phone-box">
                    <p>Liên Hệ:- <a href="#">0855774792</a></p>
                </div>
                <div class="our-link">
                    <ul>
                        <li><a asp-controller="Home" asp-action="Contact"><i class="fas fa-headset"></i>Liên hệ</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                <div class="text-slid-box">
                    <div id="offer-box" class="carouselTicker">
                        <ul class="offer-box">
                            <li>
                                <i class="fab fa-opencart"></i> Cửa Hàng Đã Cập Nhật Sản Phẩm Mới
                            </li>
                            <li>
                                <i class="fab fa-opencart"></i> Giảm Giá 10%! Mua ngay thôi
                            </li>
                            <li>
                                <i class="fab fa-opencart"></i> Hải Sản Tươi Phù Hợp Với Mọi Người
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<header class="main-header">
    <!-- Start Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-default bootsnav">
        <div class="container">
            <!-- Start Header Navigation -->
            <div class="navbar-header">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbar-menu" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
                    <i class="fa fa-bars"></i>
                </button>
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/images/banner/logo1.jpg" class="logo" alt=""></a>
            </div>
            <!-- End Header Navigation -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="navbar-menu">
                <ul class="nav navbar-nav ml-auto" data-in="fadeInDown" data-out="fadeOutUp">
                    <li class="nav-item active"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="ProductHome" asp-action="Index">Mua Sắm</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Post" asp-action="">Tin Tức</a></li>
                    <li class="dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">Cửa Hàng</a>
                        <ul class="dropdown-menu" style="background-color:lightgreen">
                            <li><a asp-controller="Store" asp-action="Index">Tất Cả Cửa Hàng</a></li>
                            @await Component.InvokeAsync("Store")
                        </ul>
                    </li>
                    <li class="search">
                        <form asp-action="Search" asp-controller="ProductHome" style="display: flex;width: 180px;">
                            <input id="searchText" class="form-control" placeholder="Nhập Thông Tin" type="search" name="query">
                            <button id="searchButton" type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
            <!-- Start Atribute Navigation -->
            <div class="attr-nav">
                <ul>
                    <li class="side-menu">
                        @await Component.InvokeAsync("Cart")
                    </li>
                    @await Component.InvokeAsync("Login")
                </ul>
            </div>
            <!-- End Atribute Navigation -->
        </div>
        <!-- End Top Search -->
    </nav>
    <!-- End Navigation -->
</header>
<div class="top-search">
    <div class="container">
        <div class="input-group">
            <span class="input-group-addon"><i class="fa fa-search"></i></span>
            <input type="text" class="form-control" placeholder="Search">
            <span class="input-group-addon close-search"><i class="fa fa-times"></i></span>
        </div>
    </div>
</div>
