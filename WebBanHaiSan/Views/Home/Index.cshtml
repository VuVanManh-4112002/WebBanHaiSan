<!-- End Categories -->
<!-- Start Products  -->
<div class="products-box">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Cá và Đồ Đóng Gói</h1>
                    <p>Các sản phẩm thân thiện với môi trường</p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="special-menu text-center">
                    <div class="button-group filter-button-group">
                        <button class="active" data-filter="*">All</button>
                        <button data-filter=".top-featured">Giảm Giá</button>
                        <button data-filter=".best-seller">Bán Chạy</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="row special-list">
            @await Html.PartialAsync("ListProductPartialView", AllProduct)
        </div>
    </div>
</div>
<!-- End Products  -->
<!-- Start Blog  -->
<div class="latest-blog">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h1>Tin Tức</h1>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Posts)
            {
                string url = $"/tintuc/{@item.PostId}.html";
                <div class="col-md-6 col-lg-4 col-xl-4">
                    <div class="blog-box" style="height: 100%; display: flex; flex-direction: column;">
                        <div class="blog-img" asp-action="Details" asp-controller="Post" asp-route-id="@item.PostId">
                            <img class="img-fluid" src="~/images/posts/@item.Image" alt="" style="width: 100%; height: 200px;" />
                        </div>
                        <div class="blog-content" style="flex-grow: 1;">
                            <h4><b>Ngày Tạo: @item.Creatdate.Value.ToShortDateString()</b></h4>
                            <div class="title-blog">
                                <h3>@item.Title</h3>
                                <p>@item.Contents</p>
                            </div>
                        </div>
                        <div class="text-center" style="margin-top: auto;">
                            <a asp-action="Details" asp-controller="Post" asp-route-id="@item.PostId" class="btn hvr-hover" style="color:white"><i class="fas fa-eye"></i> Xem Thêm</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>