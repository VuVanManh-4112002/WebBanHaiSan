<!-- Start Categories  -->
<div class="categories-shop">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="title-all text-center">
                    <h2>Danh Mục Sản Phẩm</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Product)
            {
                <div class="col-lg-2 col-md-3 col-sm-5 col-xs-5" style="margin-right: 30px;">
                    <div class="shop-cat-box" style="height:150px; width:150px;left: 26px">
                        <a href="@Url.Action("List", "ProductHome", new { CatID = item.category.CartId })">
                            <img class="img-fluid" src="~/images/categorys/@item.category.Cover" alt="@item.category.Title" style="height:100px; width:100px" />
                        </a>
                        <div class="category-description">
                            @item.category.CartName
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
