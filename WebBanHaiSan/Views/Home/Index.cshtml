@model WebBanHaiSan.ViewModels.HomeViewVM
@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Product> AllProduct = ViewBag.AllProducts;
}
<style>
    .blog-box {
        display: flex;
        flex-direction: column;
        height: 100%;
    }

    .blog-img img {
        width: 100%;
        height: auto;
    }

    .blog-content {
        flex-grow: 1;
    }

    .blog-box .text-center {
        margin-top: auto;
    }

    .shop-cat-box {
        position: relative;
        text-align: center;
    }

        .shop-cat-box img {
            max-width: 100%;
            height: auto;
            cursor: pointer;
        }

    .category-description {
        margin-top: 10px;
        font-size: 18px;
        font-weight: bold;
        color: #333;
    }

    #slides-shop.cover-slides {
        max-width: 1000px;
        /* Set maximum width */
        margin: 0 auto; /* Center the slider horizontally */
        height: 350px;
    }

    .slides-container {
        width: 100%; /* Ensure slides fill the container width */
        max-width: 100%; /* Ensure slides don't exceed the container width */
    }

    .slides-navigation {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        z-index: 999;
        width: 100%;
        max-width: 1200px; /* Match the width of the slider */
    }

        .slides-navigation .next,
        .slides-navigation .prev {
            font-size: 24px;
            color: #fff;
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
        }

        .slides-navigation .next {
            right: 15px;
        }

        .slides-navigation .prev {
            left: 15px;
        }
</style>
<!-- Start Slider -->
<div id="slides-shop" class="cover-slides">
    <ul class="slides-container">
        <li class="text-center">
            <img src="~/images/banner/Banner01.jpg" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Welcome To <br> ManhTu Store</strong></h1>
                        <p class="m-b-40">Chào Mừng bạn đến với chúng tôi</p>
                        <p><a class="btn hvr-hover" asp-controller="ProductHome" asp-action="Index">Mua Sắm Ngay</a></p>
                    </div>
                </div>
            </div>
        </li>
        <li class="text-center">
            <img src="~/images/banner/Banner02.jpg" alt="">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20"><strong>Welcome To <br> ManhTu Store</strong></h1>
                        <p class="m-b-40">Cửa Hàng Bán Cá</p>
                        <p><a class="btn hvr-hover" asp-controller="ProductHome" asp-action="Index">Mua Sắm Ngay</a></p>
                    </div>
                </div>
            </div>
        </li>
        <li class="text-center">
            <img src="~/images/banner/Banner03.jpg" alt="">
            @*<div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <h1 class="m-b-20">Chuyên Cung Cấp Các Loại Hải Sản Tươi Sống Và Đóng Gói</h1>
